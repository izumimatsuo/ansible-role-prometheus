---
global:
  scrape_interval:     15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
  - static_configs:
    - targets: ['localhost:9093']

rule_files:
  - 'alert_rules.yml'

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'alertmanager'
    static_configs:
      - targets: ['localhost:9093']

  - job_name: 'node_exporter'
    file_sd_configs:
      - files: ['/etc/prometheus/targets/node.yml']
    relabel_configs:
      - source_labels: [__address__]
        target_label: __address__
        regex: ([^:]*)
        replacement: ${1}:9100

  - job_name: 'blackbox_exporter_http'
    metrics_path: /probe
    params:
      module: [http_2xx]
    file_sd_configs:
      - files: ['/etc/prometheus/targets/service.yml']
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: localhost:9115

  - job_name: 'blackbox_exporter_icmp'
    metrics_path: /probe
    params:
      module: [icmp]
    file_sd_configs:
      - files: ['/etc/prometheus/targets/node.yml']
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: localhost:9115
